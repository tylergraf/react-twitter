.tweet-footer
  layout()
  horizontal()
  justified()
  margin: 0 20px
  margin-top: 4px
.favorite
  layout()
  vertical()
  center()
  width: 40px
  height: 60px
  .favorite-icon
    fill: #CA232F
    width: 30px
    height: 30px
    margin-bottom: 5px
    transition: height 300ms ease, height 300ms ease, margin 300ms
    &.on
      width: 40px
      height: 40px
      margin-left: -1px
      margin-top: -5px
      margin-bottom: 0px
.retweet
  layout()
  vertical()
  center()
  .retweet-icon
    fill: #777
    width: 30px
    height: 30px

    &.retweeted
      fill: #333

.reply
  layout()
  vertical()
  center()
  .reply-icon
    fill: #777
    width: 30px
    height: 30px
